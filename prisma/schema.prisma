model Orchestra_Type {
  id            String @id @default(cuid())
  type          String
  orchestra     Orchestra @relation(fields: [orchestra_id], references: [id])
  orchestra_id  String @unique
}

model Type_Post {
  id      String @id @default(cuid())
  type    String
  post    Post[]
}