generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// MODELO EXAMPLE

model Orchestra {
  id               String     @id @default(cuid()) // Podria declararse como tipo string @default(cuid()) ??? 
  name             String     @unique @db.VarChar()
  description      String    
  logo             String
  banner           String
  creation_date    String
  sponsor          String
  location         String
  orchestra_type   Orchestra_Type?
  isActive         Boolean    @default(true)
  fav_id           Favorite[]
  donation_account String     @unique
  phone            String     @unique
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
  user_id          String
  post_id          String
  campaign_id      String
}

model User {
  id              String  @id @default(cuid())
  name            String
  email           String  @unique
  password        String
  avatar          String
  banner          String
  dateOfBirth     String
  city            String
  rol             Rol     @relation(fields: [rol_id], references: [id])
  rol_id          String  @unique
  isActive        Boolean @default(true)
  reaction_id     Post_Reaction[]
  comment_id      Comment[]
  post_id         String
  orchestra_id    String
  fav_id          Favorite[]
  first_time      Boolean @default(true)
  donation_id     String
  donation_done   Int
}

model Post {
  id            String   @id @default(cuid())
  title         String
  content       String   @db.Text
  //media      
  file          String
  //visibility    Boolean  @default(true)
  isActive      Boolean  @default(true)
  creation_date DateTime @default(now())
  event_date    String
  event_hour    String
  post_type     Type_Post @relation(fields: [post_type_id], references: [id])
  post_type_id  String
  views         Int
  comment_id    Comment[]
  user_id       String
  orchestra_id  String
  reaction_id   Post_Reaction[]
}

model Campaign {
  id            String    @id @default(cuid())
  title         String
  goal_amount   Float
  start_date    String
  end_date      String
  description   String    @db.Text
  isActive      Boolean   @default(true)
  amount_raised Float
  orchestra_id  String
  donation_id   Donation[]
}

model Donation {
  id          String    @id @default(cuid())
  quantity    Float
  isPrivate   Boolean   @default(false)
  date        DateTime  @default(now())
  user_id     String
  campaign    Campaign @relation(fields: [campaign_id], references: [id])
  campaign_id String
}

model Comment {
  id              String @id @default(cuid())
  content         String
  creation_date   String
  isActive        Boolean @default(true)
  user            User @relation(fields: [user_id], references: [id])
  user_id         String
  post            Post @relation(fields: [post_id], references: [id])
  post_id         String
}

model Favorite {
  id           String @id @default(cuid())
  user         User @relation(fields: [user_id], references: [id])
  user_id      String
  orchestra    Orchestra @relation(fields: [orchestra_id], references: [id])
  orchestra_id String
}

model Reaction {
  id               String @id @default(cuid())
  reaction         String 
  image_url        String
  post_reaction    Post_Reaction @relation(fields: [post_reaction_id], references: [id])
  post_reaction_id String
}

model Post_Reaction {
  id        String @id @default(cuid())
  user      User @relation(fields: [user_id], references: [id])
  user_id   String
  post      Post @relation(fields: [post_id], references: [id])
  post_id   String
  reaction  Reaction[]
}

model Rol {
  id      String @id @default(cuid())
  rol     String
  user    User?
}

