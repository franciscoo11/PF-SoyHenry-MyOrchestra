// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// MODELO EXAMPLE

model Orchestra {
  id               String          @id @default(cuid()) // Podria declararse como tipo string @default(cuid()) ??? 
  name             String          @unique @db.VarChar()
  description      String
  logo             String
  cover            String
  creation_date    String
  sponsor          String?
  location         String
  orchestra_type   String?
  is_active        Boolean         @default(true)
  donation_account String          @unique
  phone            String          @unique
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  user_id          String?
  post_id          String?
  Orchestra_Type   Orchestra_Type? @relation(fields: [orchestra_TypeId], references: [id])
  orchestra_TypeId String?
}

model User {
  id          String    @id @default(cuid())
  name        String
  email       String    @unique
  password    String
  avatar      String
  cover       String
  dateOfBirth String
  city        String
  is_active   Boolean   @default(true)
  first_time  Boolean   @default(true)
  comments    Comment[]
}

model Post {
  id            String    @id @default(cuid())
  title         String
  content       String    @db.Text
  url_video     String?
  url_file      String?
  visibility    String
  is_active     Boolean   @default(true)
  creation_date DateTime  @default(now())
  event_date    String
  event_hour    String
  post_type     String?
  post_type_id  String
  views         Int
  user_id       String?
  orchestra_id  String
  reaction_id   String?
  comments      Comment[]
}

model Orchestra_Type {
  id           String      @id @default(cuid())
  type         String
  orchestras   Orchestra[]
  orchestra_id String
}

model Campaign {
  id            String  @id @default(cuid())
  title         String
  goal_amount   Float
  start_date    String
  end_date      String
  description   String  @db.Text
  is_active     Boolean @default(true)
  amount_raised Float
  orchestra_id  String
}

model Comment {
  id            String  @id @default(cuid())
  content       String
  creation_date String
  is_active     Boolean @default(true)
  User          User?   @relation(fields: [userId], references: [id])
  userId        String?
  Post          Post?   @relation(fields: [postId], references: [id])
  postId        String?
}

