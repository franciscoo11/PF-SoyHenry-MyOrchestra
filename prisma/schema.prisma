generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


// MODELO EXAMPLE

model Orchestra {
  id Int @id              @default(autoincrement()) // Podria declararse como tipo string @default(cuid()) ??? 
  name String @unique     @db.VarChar()
  description String      @db.Text
  logo String
  cover String
  creation_date String
  sponsor String
  location String
  orchestra_type String
  isActive Boolean        @default(true)
  //fav_id ---> Esto seria una FK????
  donation_account String
  phone Float             @unique
  createdAt DateTime
  updatedAt DateTime      @updatedAt
}