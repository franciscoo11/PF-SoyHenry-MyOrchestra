// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// MODELO EXAMPLE

model Orchestra {
  id               String     @id @default(cuid()) // Podria declararse como tipo string @default(cuid()) ??? 
  name             String     @unique @db.VarChar()
  description      String     @db.Text
  logo             String
  banner           String
  creation_date    String
  sponsor          String
  location         String
  orchestra_type   String
  isActive         Boolean    @default(true)
  fav_id           Int
  donation_account String     @unique
  phone            String     @unique
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
  user_id          Int
  post_id          Int
  campaign_id      Int
}

model User {
  id              String  @id @default(cuid())
  name            String
  email           String  @unique
  password        String
  avatar          String
  banner          String
  dateOfBirth     String
  city            String
  rol_id          String
  isActive        Boolean @default(true)
  reaction_id     Int
  comment_id      Int
  post_id         Int
  orchestra_id    Int
  fav_id          Int
  first_time      Boolean @default(true)
  donation_id     Int
  donation_done   Int
}

model Post {
  id            String   @id @default(cuid())
  title         String
  content       String   @db.Text
  //media      
  file          String
  //visibility    Boolean  @default(true)
  isActive      Boolean  @default(true)
  creation_date DateTime @default(now())
  event_date    String
  event_hour    String
  post_type     Int 
  views         Int
  comment_id    Int
  user_id       Int
  orchestra_id  Int
  reaction_id   Int
}